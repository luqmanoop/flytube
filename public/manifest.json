{
  "name": "BrewTube",
  "description": "Ad-free YouTube, no subscription.",
  "version": "1.0.0",
  "manifest_version": 3,
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "action": {
    "default_title": "BrewTube (Ad-free YouTube, no subscription)",
    "default_popup": "popup/index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "declarativeContent"],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content-script.js"]
    }
  ]
}
