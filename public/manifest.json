{
  "name": "YPremium",
  "description": "YPremium is a browser extension that allows you to access premium content on YT.",
  "version": "0.1.0",
  "manifest_version": 3,
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "action": {
    "default_title": "Extension action title",
    "default_popup": "popup/index.html"
  },
  "options_page": "options/index.html",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["contentScript.js"]
    }
  ]
}
